{
    "image": "myzen/devcontainer:23",
    "postStartCommand": "/bin/bash /start.sh",
    "forwardPorts": [1433],
    "containerEnv": {
        "ACCEPT_EULA": "Y",
        "MSSQL_PID": "Express",
        "MSSQL_SA_PASSWORD": "ZenPassword123!"
    },
    "mounts": ["type=volume,source=dev-mssql-data,target=/var/opt/mssql"],
    "features": {
        "ghcr.io/joshuanianji/devcontainer-features/gcloud-cli-persistence:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-dotnettools.csharp",
                "mtxr.sqltools-driver-mssql"
            ],
            "settings": {
                "files.exclude": {
                    "**/.classpath": true,
                    "**/.project": true,
                    "**/.settings": true,
                    "**/.factorypath": true,
                    "**/.*": true,
                    "**/bin": true,
                    "**/obj": true,
                    "nuget.config": true,
                    "dev.sln": true,
                    "global.json": true,
                },
                "sqltools.connections": [
                    {
                        "connectionTimeout": 15,
                        "mssqlOptions": {
                            "appName": "SQLTools",
                            "useUTC": true,
                            "encrypt": true,
                            "trustServerCertificate": true
                        },
                        "ssh": "Disabled",
                        "previewLimit": 50,
                        "server": "localhost",
                        "port": 1433,
                        "driver": "MSSQL",
                        "name": "local",
                        "username": "sa",
                        "password": "ZenPassword123!"
                    }
                ]
            }
        }
    }
}
